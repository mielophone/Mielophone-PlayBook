<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 width="180" height="200">	
	<fx:Declarations>
		<fx:Object id="image" />
		<fx:String id="text" />
	</fx:Declarations>
	
	<s:Rect width="100%" height="100%" radiusX="10" radiusY="10">
		<s:stroke>
			<s:SolidColorStroke color="#000000" alpha="0.5" weight="2" />
		</s:stroke>
	</s:Rect>
	
	<s:Image source="{image}" horizontalCenter="0" top="10" />
	<s:Label text="{text}" bottom="5" horizontalCenter="0"  fontSize="48" fontFamily="PTSansBold">
		<s:filters>
			<s:GradientBevelFilter angle="90" blurX="10" blurY="10" type="inner">
				<s:GradientEntry color="#2b65a0" />
				<s:GradientEntry color="#4ab6e0" />
			</s:GradientBevelFilter>
		</s:filters>
	</s:Label>
</s:Group>
